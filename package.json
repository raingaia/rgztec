{
  "name": "rgztec-marketplace",
  "private": true,
  "packageManager": "pnpm@9.8.0",
  "workspaces": ["apps/*"],
  "scripts": {
    "i": "pnpm -r install",
    "dev": "concurrently -n API,WEB,ADMIN -c green,blue,magenta \"pnpm dev:api\" \"pnpm dev:web\" \"pnpm dev:admin\"",
    "dev:api": "tsx watch apps/api/src/main.ts",
    "dev:web": "pnpm --dir apps/web dev",
    "dev:admin": "pnpm --dir apps/admin dev",
    "build:web": "pnpm --dir apps/web build",
    "build:admin": "pnpm --dir apps/admin build"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "tsx": "4.19.1",
    "typescript": "5.6.2"
  },
  "engines": { "node": ">=20" }
}
