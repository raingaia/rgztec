{
  "version": 2,
  "name": "rgztec-premium-hub",
  "cleanUrls": true,
  "trailingSlash": true,

  "rewrites": [
    {
      "comment": "--- STATIC FILES (docs altindan servis) ---",
      "source": "/assets/:path*",
      "destination": "/docs/assets/:path*"
    },
    {
      "comment": "--- DATA (docs altindan servis) ---",
      "source": "/data/:path*",
      "destination": "/docs/data/:path*"
    },

    {
      "comment": "--- DYNAMIC LAYER (apps/* -> tek shell) ---",
      "source": "/apps/:path*",
      "destination": "/docs/store/index.html"
    },

    {
      "comment": "--- STORE LAYER (store/* -> tek shell) ---",
      "source": "/store/:path*",
      "destination": "/docs/store/index.html"
    },

    {
      "comment": "--- (OPSÄ°YONEL) ESKI KISA LINKLERI STORE'A TASIMA ---",
      "source": "/(game-makers|ai-tools-hub|hardware|tiny-js-lab|unity-hub|wp-plugins|icon-smith|html-templates|email-forge|reactorium|dev-studio-one)/:path*",
      "destination": "/store/$1/:path*"
    },

    {
      "comment": "--- HOME ---",
      "source": "/",
      "destination": "/docs/index.html"
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "index, follow" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ]
}
