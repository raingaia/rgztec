{
  "version": 2,
  "name": "rgztec-premium-hub",
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    {
      "comment": "--- MODÜLLERİ KORU (Dinamik JS dosyaları HTML'e yönlenmemeli) ---",
      "source": "/docs/apps/modules/:path*",
      "destination": "/docs/apps/modules/:path*"
    },
    {
      "comment": "--- STATIC FILES & DATA ---",
      "source": "/assets/:path*",
      "destination": "/docs/assets/:path*"
    },
    {
      "source": "/data/:path*",
      "destination": "/docs/data/:path*"
    },

    {
      "comment": "--- SELLER HUB & DASHBOARD (Tek Shell üzerinden yönetim) ---",
      "source": "/(seller|dashboard|payouts|analytics)",
      "destination": "/docs/store/index.html"
    },

    {
      "comment": "--- STORE LAYER ---",
      "source": "/store/:path*",
      "destination": "/docs/store/index.html"
    },

    {
      "comment": "--- HOME ---",
      "source": "/",
      "destination": "/docs/index.html"
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "index, follow" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:;" }
      ]
    },
    {
      "source": "/docs/apps/modules/(.*).js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}
